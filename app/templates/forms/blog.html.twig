<form id="{{form.id}}" class="js-form" method="{{form.method | default('POST')}}" action="{{site.uri.public}}/{{form.action}}">
	{% include "forms/csrf.html.twig" %}
    <div class="js-form-alerts" id="blog-alert">
    </div>
	<div class="form-group has-feedback">
		<label>Blog Title</label>
		<input type="text" class="form-control" name="blog_name" id="blog_name" value="{{blog.name}}">
	</div>
	<div class="form-group has-feedback">
		<label>Blog Slug</label>
		<input type="text" class="form-control" name="blog_slug" id="blog_slug" value="{{blog.slug}}">
	</div>
	<div class="checkbox icheck">
        <label>
            <input type="checkbox" class="js-icheck" name="public" id="public" {%if blog.public %}checked{%endif%}> Public Blog
        </label>
    </div>
	<div class="form-group has-feedback" id="read_permission_container">
		<label>Read Permission</label>
		<input type="text" name="read_permission" id="read_permission" class="form-control" value="{{blog.read_p}}" readonly />
	</div>
	<div class="form-group has-feedback">
		<label>Write Permission</label>
		<input type="text" name="write_permission" id="write_permission" class="form-control" value="{{blog.write_p}}" readonly />
	</div>
	<input type="hidden" name="read_id" value="{{blog.read_id}}" />
	<input type="hidden" name="write_id" value="{{blog.write_id}}" />
	
	<button class="btn btn-primary">{{form.submit}}</button>
</form>