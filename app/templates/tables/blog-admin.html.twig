{% extends "tables/table-paginated.html.twig" %}

{% block table %}
    <table id="{{table.id}}" class="tablesorter table table-bordered table-hover table-striped" data-sortlist="{{table.sortlist}}">
        <thead>
            <tr>
                <th class="sorter-metatext" data-column-name="title" data-column-template="#blog-table-column-info" data-priority="">Blogs <i class="fa fa-sort"></i></th>
				<th class="sorter-metatext" data-column-template="#blog-table-column-actions" data-sorter="false" data-filter="false" data-priority="1">Actions<i class="fa fa-sort"></i></th>
			</tr>
        </thead>
        <tbody>
        </tbody>
    </table>
{% endblock %}

{% block table_cell_templates %}

    {% verbatim %}
    <script id="blog-table-column-info" type="text/x-handlebars-template">
        <td data-text="{{row.id}}">
            <strong>
                <a href="{{site.uri.public}}/admin/blogs/b/{{row.id}}">{{row.title}}</a>
            </strong>
        </td>
    </script>
	
	<script id="blog-table-column-actions" type="text/x-handlebars-template">
		<td>
			<div class="btn-group">
				<button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
					Actions
					<span class="caret"></span>
				</button>
				<ul class="dropdown-menu dropdown-menu-right" role="menu">
					<li>
						<a href="{{site.uri.public}}/blogs/b/{{row.id}}" target="_blank">
						   <i class="fa fa-eye"></i> Preview Blog
						</a>
					</li>
					{% endverbatim %}
					{% if checkAccess('uri_blog_manager') %}
					{% verbatim %}
					<li>
						<a href="#" data-id="{{row.id}}" class="js-blog-edit">
						   <i class="fa fa-edit"></i> Edit blog
						</a>
					</li>
					<li>
						<a href="#" data-id="{{row.id}}" class="js-blog-delete">
							<i class="fa fa-trash-o"></i> Delete blog
						</a>
					</li>
					{% endverbatim %}
					{% endif %}
					{% verbatim %}
				</ul>
			</div>
		</td>
    </script>
    
    {% endverbatim %}

{% endblock %}